                    android:text="+5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:textSize="20sp"
                    android:background="#8017b0"
                    android:id="@+id/wisMod0"/>
            <TextView
                    android:text="+5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:textSize="20sp"
                    android:background="#fbb716"
                    android:id="@+id/chaMod0"/>

        </LinearLayout>

            <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

            <TextView
                    android:text="Saving Throw"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:textSize="20sp"
                    android:id="@+id/abilitySaveText0"/>
            <TextView
                    android:text="+7"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:textSize="20sp"
                    android:background="#ec2121"
                    android:id="@+id/strSave0"/>
            <TextView
                    android:text="+7"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:textSize="20sp"
                    android:background="#1f9f2e"
                    android:id="@+id/dexSave0"/>
            <TextView
                    android:text="+7"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:textSize="20sp"
                    android:background="#ff6928"
                    android:id="@+id/conSave0"/>
            <TextView
                    android:text="+7"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:textSize="20sp"

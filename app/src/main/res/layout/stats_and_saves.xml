                    android:text="20"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:textSize="20sp"
                    android:background="#8017b0"
                    android:id="@+id/wisTotal0"/>
            <TextView
                    android:text="20"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:textSize="20sp"
                    android:background="#fbb716"
                    android:id="@+id/chaTotal0"/>

        </LinearLayout>

        <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1">

            <TextView
                    android:text="Ability"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:textSize="20sp"
                    android:id="@+id/abilityText0"/>
            <TextView
                    android:text="Strength"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:textSize="20sp"
                    android:background="#ec2121"
                    android:id="@+id/strText0"/>
            <TextView
                    android:text="Dexterity"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:textSize="20sp"
                    android:background="#1f9f2e"
                    android:id="@+id/dexText0"/>
            <TextView
                    android:text="Constitution"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:textSize="20sp"
                    android:background="#ff6928"
                    android:id="@+id/conText0"/>
            <TextView
                    android:text="Intelligence"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:textSize="20sp"
                    android:background="#055eb0"
                    android:id="@+id/intText0"/>
            <TextView
                    android:text="Wisdom"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:textSize="20sp"
                    android:background="#8017b0"
                    android:id="@+id/wisText0"/>
            <TextView
                    android:text="Charisma"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:textSize="20sp"
                    android:background="#fbb716"
                    android:id="@+id/chaText0"/>


        </LinearLayout>

        <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1">

            <TextView
                    android:text="Modifier"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:textSize="20sp"
                    android:id="@+id/abilityModText0"/>
            <TextView
                    android:text="+5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:textSize="20sp"
                    android:background="#ec2121"
                    android:id="@+id/strMod0"/>
            <TextView
                    android:text="+5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:textSize="20sp"
                    android:background="#1f9f2e"
                    android:id="@+id/dexMod0"/>
            <TextView
                    android:text="+5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:textSize="20sp"
                    android:background="#ff6928"
                    android:id="@+id/conMod0"/>

            <TextView
                    android:text="20"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:textSize="20sp"
                    android:background="#1f9f2e"
                    android:id="@+id/dexTotal0"/>
            <TextView
                    android:text="20"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"

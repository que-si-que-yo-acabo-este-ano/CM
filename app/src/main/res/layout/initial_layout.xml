<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
                                             android:layout_height="match_parent">

    <TextView
            android:text="App's name"
            android:layout_width="112dp"
            android:layout_height="44dp"
            android:id="@+id/title" app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintVertical_bias="0.026" android:gravity="center" android:textAlignment="center"
            android:textAllCaps="false"/>
    <TextView
            android:text="Create new character"
            android:layout_width="294dp"
            android:layout_height="29dp"
            android:id="@+id/initialCreateCharacter" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:textAlignment="center" android:layout_marginBottom="24dp"
            android:background="@drawable/back"
            app:layout_constraintBottom_toTopOf="@+id/initialShowSpells" app:layout_constraintHorizontal_bias="0.504"
            android:gravity="center"/>
    <TextView
            android:layout_width="294dp"
            android:layout_height="29dp"
            android:id="@+id/initialShowSpells" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginBottom="52dp" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.504" android:text="Show all spells" android:textAlignment="center"
            android:background="@drawable/back"
            android:gravity="center"/>
    <ScrollView
            android:layout_width="395dp"
            android:layout_height="482dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/initialCreateCharacter" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/title" app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintVertical_bias="0.241" android:id="@+id/initialScrollView">
        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                      android:orientation="vertical" android:id="@+id/initialCharacters"/>
    </ScrollView>
</android.support.constraint.ConstraintLayout>